<Page x:Class="WpfApp9.PagePics"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp9"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PagePics">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Pictures of the museum" Margin="20" HorizontalAlignment="Center"  FontSize="40" FontWeight="ExtraLight" Foreground="Black"/>
        <Image Height="180" Grid.Row="1" Width="230" Margin="550,10,10,10" Grid.RowSpan="2" Image.Source="/pics/p1.jpg" Stretch="Fill"/>
        <Image Height="180" Grid.Row="1" Width="230" Margin="10" HorizontalAlignment="Left" Image.Source="/pics/p2.jpg" Stretch="Fill"/>
        <Image Height="180" Grid.Row="1" Width="230" Margin="10" HorizontalAlignment="Center" Image.Source="/pics/p3.jpg" Stretch="Fill"/>
        <StackPanel Orientation="Horizontal">
            <TextBlock FontSize="15">
                <Hyperlink Click="PListView" >PageListView</Hyperlink>
            </TextBlock>
            <TextBlock Text=" | "/>
            <TextBlock FontSize="15">
                <Hyperlink Click="PCalander" >PageCalander</Hyperlink>
            </TextBlock>
            <TextBlock Text=" | "/>
            <TextBlock FontSize="15">
                <Hyperlink Click="PText" >PageText</Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Page>
